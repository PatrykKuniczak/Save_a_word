#:import CardTransition kivy.uix.screenmanager.CardTransition
WindowManager:
    transition: CardTransition()
    duration: 0.5
    MainScreen:
    AddScreen:
    DeleteScreen:
    ExportScreen:
    LearnScreen:
    InfoScreen:



<MainScreen>
    name: 'main'
    canvas.before:
        Color:
            rgba: (224/255, 203/255, 92/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 1
        size:root.width, root.height
        Label:
            text: 'Save a word'
            font_size: 16
            background_color: (194/255, 174/255, 70/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            halign: 'center'
            size_hint_y: None
            height: 35
        GridLayout:
            cols: 2

            GridLayout:
                cols: 1
                size_hint_x: None
                width: 100
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text : 'Description'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text : 'Add'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                    on_release:
                        app.root.current = 'add'
                        root.manager.transition.direction = 'left'
                        root.manager.transition.duration = 0.01
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text: 'Delete'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                    on_release: app.root.current = 'delete'
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text : 'Export'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                    on_release: app.root.current = 'export'
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text : 'Learn'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                    on_release: app.root.current = 'learn'
                Button:
                    background_color: (242/255, 222/255, 115/255, 1)
                    text : 'Info'
                    size_hint_x: None
                    width: 100
                    size_hint_y: None
                    height: 45
                    on_release: app.root.current = 'info'



            GridLayout:
                cols: 1

                Label:
                    text : 'Description \n HERE WE WILL PASTE DESCRIPTION FOR THE APP'
                    valign : 'top'
                    halign : 'center'

